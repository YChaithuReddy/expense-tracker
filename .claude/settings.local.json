{
  "permissions": {
    "allow": [
      "Bash(dir:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push)",
      "Bash(node create-placeholder-icons.js:*)",
      "Bash(npm install:*)",
      "Bash(npx cap add android)",
      "Bash(cd frontend && node build.js)",
      "Bash(cd frontend && npx cap sync android)",
      "WebSearch",
      "Bash(node build.js:*)",
      "Bash(npx cap:*)",
      "mcp__plugin_supabase_supabase__list_projects",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_resize",
      "mcp__playwright__browser_fill_form",
      "mcp__playwright__browser_snapshot",
      "Bash(npx claude-code-templates@latest --command=design/web-design-reviewer --yes)",
      "Bash(node -e:*)",
      "Bash(git push:*)",
      "Bash(cd:*)",
      "Bash(tree:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$(git rev-parse --show-toplevel 2>/dev/null || echo .)/.claude/hooks/session-start-context.sh\" 2>/dev/null || echo '{\"systemMessage\":\"Session started. Follow 7-step workflow.\"}'",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$(git rev-parse --show-toplevel 2>/dev/null || echo .)\" && bash .claude/hooks/workflow-enforcer.sh 2>/dev/null || echo '{\"systemMessage\":\"Follow 7-step workflow. Use TaskCreate for multi-step work.\"}'",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$(git rev-parse --show-toplevel 2>/dev/null || echo .)\" && bash .claude/hooks/block-env-edits.sh 2>/dev/null || true",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$(git rev-parse --show-toplevel 2>/dev/null || echo .)\" && bash .claude/hooks/pre-commit-gate.sh 2>/dev/null || true",
            "timeout": 15
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$(git rev-parse --show-toplevel 2>/dev/null || echo .)\" && bash .claude/hooks/auto-cap-sync.sh 2>/dev/null || true",
            "timeout": 30,
            "async": true
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$(git rev-parse --show-toplevel 2>/dev/null || echo .)\" && bash .claude/hooks/pre-compact-save.sh 2>/dev/null || echo '{\"systemMessage\":\"Save unsaved learnings before compression.\"}'",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$(git rev-parse --show-toplevel 2>/dev/null || echo .)\" && bash .claude/hooks/stop-learning-reminder.sh 2>/dev/null || echo '{\"systemMessage\":\"Session complete.\"}'",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
